<?xml version="1.0"?>
<robot name="myscara">

<!--  Colors-->
  <material name="yellow">
    <color rgba="0.8 0.8 0 0.9"/>
  </material>

  <material name="blue">
    <color rgba="0 0.8 0.8 0.9"/>
  </material>

  <material name="red">
    <color rgba="0.8 0 0 0.9"/>
  </material>


<!--  links-->
  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <geometry>
        <cylinder length="0.6" radius="0.3"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <link name="link1">
    <visual>
      <origin rpy="0 0 0" xyz="1.5 0 -0.3"/>
      <geometry>
        <box size="3 0.6 0.6"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_link_to_link1" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="0.0" upper="6.28" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="0 0 1.2"/>
    <parent link="base_link"/>
    <child link="link1"/>
  </joint>

  <link name="link1b">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.6" radius="0.3"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <joint name="link1_to_link1b" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -0.3"/>
    <parent link="link1"/>
    <child link="link1b"/>
  </joint>


  <link name="link2">
    <visual>
      <origin rpy="0 0 0" xyz="1.5 0 -0.3"/>
      <geometry>
        <box size="3 0.6 0.6"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="link1_to_link2" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="3 0 0"/>
    <parent link="link1"/>
    <child link="link2"/>
  </joint>

  <link name="link2b">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.6" radius="0.3"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="link2_to_link2b" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -0.3"/>
    <parent link="link2"/>
    <child link="link2b"/>
  </joint>


 <link name="link3">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="3" radius="0.15"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="link2_to_link3" type="prismatic">
    <axis xyz="0 0 -1"/>
    <limit effort="1000.0" lower="-1.5" upper="1.5" velocity="0.5"/>
    <origin rpy="0 0 0" xyz="3 0 0"/>
    <parent link="link2"/>
    <child link="link3"/>
  </joint>



</robot>