<!--        <node pkg="rqt_robot_steering" type="rqt_robot_steering" name="teleop_rqt"  output="screen">-->
<!--            <param name="~default_topic" value="/$(arg player_name)/cmd_vel"></param>-->
<!--        </node>-->
<!--    </group>-->

</launch>